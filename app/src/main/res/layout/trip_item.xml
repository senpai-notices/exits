<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:id="@+id/trip_item_root_layout"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/trip_item_layout_times">
        <TextView
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:id="@+id/station_item_tv_departure_time"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:id="@+id/station_item_tv_arrival_time"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/trip_item_layout_times"
        android:id="@+id/trip_item_layout_line"
        android:orientation="horizontal">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/trip_item_layout_line"
        android:id="@+id/trip_item_layout_route"
        android:paddingLeft="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_item_tv_origin"
            android:layout_alignParentTop="true"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_item_tv_line"
            android:layout_below="@+id/trip_item_tv_origin"
            android:textAppearance="?android:attr/textAppearanceListItem"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/trip_item_space"
            android:layout_below="@id/trip_item_tv_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_item_tv_destination"
            android:layout_below="@+id/trip_item_space"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:textSize="30sp"/>
    </RelativeLayout>
</RelativeLayout>